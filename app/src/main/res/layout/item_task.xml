<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_in_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="In progress"
            android:textColor="#FA7B53" />

        <TextView
            android:id="@+id/tv_contact_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_in_progress"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Contact Page"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:text="#Design"
            android:textColor="#999393" />

        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:src="@drawable/ic_sms_black_24dp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toEndOf="@id/iv_sms"
            android:text="3"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toEndOf="@id/tv_3"
            android:src="@drawable/ic_attach_file_black_24dp" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toEndOf="@id/iv_attach"
            android:text="5"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_toEndOf="@id/tv_5"
            android:src="@drawable/badge" />

        <com.padcmyanmar.padcx.customviewassignment.views.components.RoundedImageCornerView
            android:id="@+id/iv_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_contact_page"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:layout_marginEnd="@dimen/margin_large"
            android:scaleType="centerCrop"
            android:src="@drawable/photo1"
            app:corner_radius="20dp"
            app:border_width="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_page"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_toStartOf="@id/iv_photo"
            android:text="N* 163"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>